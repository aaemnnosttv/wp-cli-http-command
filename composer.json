{
    "name": "aaemnnosttv/wp-cli-http-command",
    "description": "WP-CLI command for using the WordPress HTTP API",
    "authors": [
        {
            "name": "Evan Mattson",
            "email": "me@aaemnnost.tv",
            "homepage": "https://aaemnnost.tv"
        }
    ],
    "autoload": {
        "psr-4": {"WP_HTTP_Command\\":"src"},
        "files": ["command.php"]
    },
    "require": {
        "php": "^5.5 | ^7.0"
    },
    "require-dev": {
        "behat/behat": "2.5.*",
        "johnpbloch/wordpress": "^4.6",
        "wp-cli/wp-cli": "^0.24.1"
    },
    "scripts": {
        "run-behat": "WP_CLI_BIN_DIR=$PWD/vendor/bin vendor/bin/behat --ansi --format=progress"
    }
}
